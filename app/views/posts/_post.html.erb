<%= link_to user_post_path(post.author, post) do %>
  <div class="rounded-lg bg-slate-50 w-full p-4">
    <h2 class="text-lg mb-1"><%= post.title %></h2>
    <p class="text-gray-600"><%= post.text %></p>
    <div class="flex divide-x gap-x-2 mt-4">
      <div>
        <%= render layout: "shared/tag" do %>
          <div class="flex gap-x-1 items-center font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.76c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.076-4.076a1.526 1.526 0 011.037-.443 48.282 48.282 0 005.68-.494c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
            </svg>
            <span><%= post.comments_counter %></span>
          </div>
        <% end %>
        <%= render layout: "shared/tag" do %>
          <div class="flex gap-x-1 items-center font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
            </svg>
            <span><%= post.likes_counter %></span>
          </div>
        <% end %>
      </div>
      <div class="pl-2 flex gap-x-2">
        <%= render partial: 'likes/form', locals: { post_id: post.id } %>
        <%= render partial: 'posts/delete_button', locals: { post_id: post.id } if can? :destroy, post %>
      </div>
    </div>
  </div>
<% end %>
