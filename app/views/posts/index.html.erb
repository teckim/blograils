<div class="flex flex-col gap-y-6">
  <div class="flex gap-x-4">
    <div class="w-48 h-48 shrink-0">
      <img class="max-w-full max-h-full h-full rounded-lg" src="<%= @author.photo %>" alt="Profile picture">
    </div>
    <div class="flex flex-col my-4">
      <div class="text-2xl font-mono mb-2">
        <%= @author.name %>
      </div>
      <div class="text-gray-400 text-xs italic">
        <%= @author.posts_counter ? 'No post yet by this author' : "#{@author.posts_counter} post(s) has been published" %>
      </div>
      <div class="text-gray-400 text-xs italic">
        Joined in <%= @author.created_at.strftime("%B, %e at %H:%M") %>
      </div>
    </div>
  </div>
  <div class="flex flex-col gap-y-6">
    <% @posts.each do |post| %>
      <div class="flex flex-col gap-y-2">
        <%= render post %>
        <%= render partial: 'shared/comment', collection: post.last_five_comments %>
      </div>
    <% end %>
  </div>
  <div class="mx-auto">
    <a class="rounded px-4 py-2 bg-slate-50 outline outline-indigo-600">
      Pagination
    </a>
  </div>
</div>
