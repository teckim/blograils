<div class="rounded-lg bg-slate-50/80 w-full p-4 relative">
  <div class="flex items-center gap-x-4">
    <div class="shrink-0">
      <%= render partial: 'shared/avatar', locals: { photo: comment.author.photo } %>
    </div>
    <div>
      <div class="text-gray-600 text-sm"><%= comment.author.name %></div>
      <div class="text-sm"><%= comment.text %></div>
    </div>
  </div>
  <div class="absolute right-2 top-2">
    <%= render partial: 'comments/delete_button', locals: { comment_id: comment.id } if can? :destroy, comment %>
  </div>
</div>
