<% input_classes = 'rounded border-none shadow w-full' %>
<% label_classes = 'text-xs font-normal text-slate-600' %>
<div class="w-96 mx-auto">
  <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |form| %>
    <div class="p-6 rounded shadow-md bg-slate-50">
      <div class="flex flex-col gap-y-2">
        <div class=" text-xl text-center">Sign Up</div>
        <div>
          <%= render 'devise/shared/error_messages', resource: resource %>
        </div>
        <div>
          <%= form.label :name, class: label_classes %><br />
          <%= form.text_field :name, class: input_classes %>
        </div>
        <div>
          <%= form.label :email, class: label_classes %><br />
          <%= form.email_field :email, class: input_classes, autofocus: true, autocomplete: "email" %>
        </div>
        <div>
          <%= form.label :password, class: label_classes %><br />
          <%= form.password_field :password, class: input_classes, autocomplete: "new-password" %>
        </div>
        <div>
          <%= form.label :password_confirmation, class: label_classes %><br />
          <%= form.password_field :password_confirmation, class: input_classes, autocomplete: "new-password" %>
        </div>
      </div>
      <div class="mt-4">
        <button type="submit" class="w-full rounded px-4 py-2 bg-primary-400 shadow-md text-white">
          Sign up
        </button>
      </div>
    </div>
    <div class="text-slate-400 text-sm text-center mt-4">
      <span>Already have an account?</span>
      <%= link_to "Log in", new_session_path(resource_name), class: "text-indigo-400 underline" %><br />
    </div>
  <% end %>
</div>
