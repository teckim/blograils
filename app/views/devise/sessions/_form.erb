<% input_classes = 'rounded border-none shadow w-full' %>
<% checkbox_classes = 'rounded border-none shadow' %>
<% label_classes = 'text-xs font-normal text-slate-600' %>
<div class="w-96 mx-auto">
  <div class="p-6 rounded shadow-md bg-slate-50">
    <%= form_for resource, as: resource_name, url: session_path(resource_name)  do |form| %>
      <div class="flex flex-col gap-y-2">
        <div class=" text-xl text-center">Sign In</div>
        <div>
          <%= render 'devise/shared/error_messages', resource: resource %>
        </div>
        <div>
          <%= form.label :email, class: label_classes %><br />
          <%= form.email_field :email, class: input_classes, autofocus: true, autocomplete: "email" %>
        </div>
        <div>
          <%= form.label :password, class: label_classes %><br />
          <%= form.password_field :password, class: input_classes, autocomplete: "new-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div>
            <%= form.check_box :remember_me, class: checkbox_classes %>
            <%= form.label :remember_me, class: label_classes %>
          </div>
        <% end %>
      </div>
      <div class="mt-4">
        <button type="submit" class="w-full rounded px-4 py-2 bg-primary-400 shadow-md text-white">
          Sign in
        </button>
      </div>
    <% end %>
  </div>
  <div class="text-slate-400 text-sm text-center mt-4">
    <span>Don't have an account?</span>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-indigo-400 underline" %><br />
  </div>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="text-slate-400 text-sm text-center">
      <span>Didn't get confirmation?</span>
      <%= link_to "Resend confirmation", new_confirmation_path(resource_name), class: "text-indigo-400 underline" %><br />
    </div>
  <% end %>
</div>
